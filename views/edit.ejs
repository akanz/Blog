<%- include ('partials/header') -%>
<section class="one">
    <div class="ui main text container segment">
        <div class="ui huge header">
            Edit <%= oldarticle.title %>
        </div>
        <div class="">
            <form class="ui form" action="/blog/<%= oldarticle._id %>?_method=PUT" method="POST">
                <div class="field">
                    <label>title</label>
                    <input type="text" name="blog[title]" value="<%= oldarticle.title %>" >
                </div>
                <div class="field">
                    <label>image</label>
                    <input type="text" name="blog[image]" value="<%= oldarticle.image %>" >
                </div>
                <div class="field">
                    <label>message</label>
                    <textarea name="blog[body]">
                        <%= oldarticle.body %>
                    </textarea>
                </div>
                <a class="ui black button" href="/blog/<%= oldarticle._id %>" > back</a>
                <button class="ui violet button">post</button>
            </form>
        </div>
    </div>
</section>

<%- include ('partials/footer') -%>